<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.itsoftware.accountbookmanagementsystem.Activity.RegisterActivity">

    <EditText
        android:id="@+id/ec"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="Confirm Password" />

    <EditText
        android:id="@+id/et"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ec"
        android:layout_alignEnd="@+id/ec"
        android:hint="Password" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et"
        android:layout_alignEnd="@+id/et"
        android:hint="UserName" />

    <Button
        android:id="@+id/signUp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ec"
        android:layout_centerHorizontal="true"
        android:onClick="signUp"
        android:text="Sign up" />

</RelativeLayout>
